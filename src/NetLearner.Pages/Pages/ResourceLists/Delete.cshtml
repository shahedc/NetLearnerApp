@page
@model NetLearner.Pages.ResourceLists.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this list?</h3>
<p>NOTE: Deleting a list will delete all the resources associated it.</p>
<div>
    <h4>Existing List</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResourceList.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResourceList.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ResourceList.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">All Lists</a>
    </form>
</div>
